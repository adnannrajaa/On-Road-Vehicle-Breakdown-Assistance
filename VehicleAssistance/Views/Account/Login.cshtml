
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <link rel="apple-touch-icon" sizes="76x76" href="~/CustomFiles/Images/apple-icon.png">
    <link rel="icon" type="image/png" href="~/CustomFiles/Images/favicon.png">
    <title>Login/Register - Vehicle Breakdown Assistance</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <link href="~/CustomFiles/css/Account/custom-bootstrap.css" rel="stylesheet" />
    <link href="~/CustomFiles/css/Account/login-register.css" rel="stylesheet" />
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css">
    <script src="~/CustomFiles/js/Account/custom-jquery.js" type="text/javascript"></script>
    <script src="~/CustomFiles/js/Account/custom-bootstrap.js" type="text/javascript"></script>
    <script src="~/CustomFiles/js/Account/login-register.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-8"></div>
            <div class="col-sm-2">
                <a class="btn big-login" data-toggle="modal" href="javascript:void(0)" onclick="openLoginModal();">Log in</a>
            </div>
            <div class="col-sm-2">
                <a class="btn big-register" data-toggle="modal" href="javascript:void(0)" onclick="openRegisterModal();">Register</a>
            </div>
            <div class="col-sm-4"></div>
        </div>
        <div class="row">
            <label>Vehicle Breakdown Assistance</label>
        </div>
        <div class="modal fade login" id="loginModal">
            <div class="modal-dialog login animated">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title">Login</h4>
                    </div>
                    <div class="modal-body">
                        <div class="box">
                            <div class="content">
                                <div class="verifyMyLogin"></div>
                                <div class="error"></div>
                                <div class="form loginBox">
                                    <input id="userName" class="form-control" type="text" placeholder="User Name" name="userName" required>
                                    <input id="password" class="form-control" type="password" placeholder="Password" name="password" required>
                                    <input class="btn btn-default btn-login" type="button" value="Login" onclick="loginAjax()">
                                </div>
                            </div>
                        </div>

                        <div class="box">
                            <div class="content registerBox" style="display:none;">
                                <div class="verifyMyLoginR"></div>
                                <div class="errorRegister"></div>
                                <div class="form">

                                    <input id="firstName" class="form-control" type="text" placeholder="First Name" name="firstName">
                                    <input id="lastName" class="form-control" type="text" placeholder="Last Name" name="lastName">
                                    <input id="phoneNo" class="form-control" type="text" placeholder="Mobile : 0300-1234567" name="mobile" onchange="phone_validate()">
                                    <input id="userNameR" class="form-control" type="text" placeholder="User Name" name="userName" onchange="IsUserExist()">
                                    <input id="passwordR" class="form-control" type="password" placeholder="Password" name="password">
                                    <input id="password_confirmation" class="form-control" type="password" placeholder="Repeat Password" name="password_confirmation">
                                    <select id="userRole" class="form-control" style="margin-bottom:5px; color:black;" onchange="showRelatedFeilds()">
                                        <option value="0">--Select Role--</option>
                                        <option value="2">Customer</option>
                                        <option value="3">Mechanic</option>
                                    </select>
                                    <input id="carType" class="form-control" type="text" placeholder="Car Type" name="carType" >
                                    <input id="location" class="form-control" type="text" placeholder="Location" name="location">
                                    <input class="btn btn-default btn-register" type="button" value="Create account" name="commit" onclick="registerUser()">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="forgot login-footer">
                            <span>
                                Looking to
                                <a href="javascript: showRegisterForm();">create an account</a>
                                ?
                            </span>
                        </div>
                        <div class="forgot register-footer" style="display:none">
                            <span>Already have an account?</span>
                            <a href="javascript: showLoginForm();">Login</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
    $(document).ready(function(){
        openLoginModal();
    });
    </script>

</body>
</html>
